{# templates/weapon/weapons.html.twig #}

{% extends '_base.html.twig' %}

{% block title %}Liste des Armes{% endblock %}

{% block body %}
    {% include '_header.html.twig' %}
    <div class="container w-80">
        <h1 class="mt-5">Liste des Armes</h1>
        <div class="row">
            {% for weapon in weapons %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-img-container">
                            <img class="card-img-top" src="{{ asset(weapon.picture) }}" alt="{{ weapon.name }}">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ weapon.name }}</h5>
                            <p class="card-text flex-grow-1">{{ weapon.description }}</p>
                            <p class="card-text">En stock : {{ weapon.inStock }}</p>
                            <p class="card-text">Prix : {{ weapon.price }} €</p>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col">
                    <p>Aucune arme trouvée.</p>
                </div>
            {% endfor %}
        </div>
    </div>
    {% include '_footer.html.twig' %}
{% endblock %}
